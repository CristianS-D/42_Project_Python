   n_n//     (((/->/        |   /
   '--'         ~='          \  |
                              | |_,,,
                 snd          \  \  /
                               '.__)	
""")
    if sword == 0:
    #------------------ Import Number guess --------------------------#
        print("this is a number guessing game guess a number between 1-100, you have 3 tries ")

        # initilizing bumber of guesses
        number_of_guess = 1
        while True:

            try:
                guess = int(input("Guess number: "))
                if number_of_guess == 3:
                    print("The Dragon Killed You " + str(dragon_health))
                    loser()
                elif guess < dragon_health:
                    print("Sorry you're too low")
                elif guess > dragon_health:
                    print("Sorry you're too high")

                elif guess == dragon_health:
                    print("Congrats you Won")
                    winner()

                number_of_guess += 1

            except (ValueError):
                print("Value Error Only input numbers please")
    elif sword == 1:
        print("this is a number guessing game guess a number between 1-100, you have 10 tries ")

        # initilizing bumber of guesses
        number_of_guess = 1
        while True:

            try:
                guess = int(input("Guess number: "))
                if number_of_guess == 10:
                    print("The dragon killed you " + str(dragon_health))
                    loser()
                elif guess < dragon_health:
                    print("Sorry you're too low")
                elif guess > dragon_health:
                    print("Sorry you're too high")

                elif guess == dragon_health:
                    print("Congrats you Won!!!")
                    winner()

                number_of_guess += 1

            except (ValueError):
                print("Value Error Only input numbers please")
#------------------------- Creating game -------------------------#

while True:
    if room_num == 1:
        room_1()
        door_selected = int(input("Enter The door you would like to go into: "))
        if door_selected == 1:
            room_num = 2
        if door_selected == 123:
            easter_egg()

    #------------------------- Room 2 takes to Rooms 1,2,4 -------------------------#

    if room_num == 2:
        room_2()
        door_selected = int(input("Enter The door you would like to go into: "))
        if door_selected == 1:
            room_num = 2
        elif door_selected == 2:
            room_num =3
        elif door_selected == 3:
            room_num = 4
    #------------------------- Room 3 takes to Rooms 1,2,4 -------------------------#

    if room_num == 3:
        room_3()
        door_selected = int(input("Enter The door you would like to go into: "))
        if door_selected == 1:
            room_num = 2
        elif door_selected == 2:
            room_num = 9
    #------------------------- Room 4 takes to Rooms 1,2,4 -------------------------#

    if room_num == 4:
        room_4()
        door_selected = int(input("Enter The door you would like to go into: "))
        if door_selected == 1:
            room_num = 2
        elif door_selected == 2:
            room_num = 5

    #------------------------- Room 5 takes to Rooms 1,2,4 -------------------------#
    if room_num == 5:
        room_5()
        door_selected = int(input("Enter The door you would like to go into: "))
        if door_selected == 1:
            room_num = 4
        elif door_selected == 2:
            room_num = 6
    #------------------------- Room 6 takes to Rooms 1,2,4 -------------------------#
    if room_num == 6:
        room_6()
        door_selected = int(input("Enter The door you would like to go into: "))
        if door_selected == 1:
            room_num = 5
        elif door_selected == 2:
            room_num = 7

    #------------------------- Room 7 takes to Rooms 1,2,4 -------------------------#
    if room_num == 7:
        room_7()
        door_selected = int(input("Enter The door you would like to go into: "))
        if door_selected == 1:
            room_num = 6
        elif door_selected == 2:
            room_num = 8
    #------------------------- Room 8 takes to Rooms 1,2,4 -------------------------#
    if room_num == 8:
        room_8()
        door_selected = int(input("Enter The door you would like to go into: "))
        if door_selected == 1:
            room_num = 7

    #------------------------- Room 9 takes to Rooms 1,2,4 -------------------------#
    if room_num == 9:
        room_9()
        door_selected = int(input("Enter The door you would like to go into: "))
        if door_selected == 1:
            room_num = 3
        elif door_selected == 2:
            room_num = 10

    #------------------------- Room 10 takes to Rooms 1,2,4 -------------------------#
    if room_num == 10:
        room_10()
        door_selected = int(input("Action: "))
        if door_selected == 1:
            room_num = 9
        if door_selected == 2:
            room_11()
